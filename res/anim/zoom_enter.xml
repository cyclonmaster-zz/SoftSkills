<?xml version="1.0" encoding="utf-8"?>
<!-- Special window zoom animation: this is the element that enters the screen,
     it starts at 200% and scales down.  Goes with zoom_exit.xml. -->
<set xmlns:android="http://schemas.android.com/apk/res/android"
        android:interpolator="@android:anim/decelerate_interpolator">
    <scale android:fromXScale="1.0" android:toXScale="0.7"
           android:fromYScale="1.0" android:toYScale="0.7"
           android:pivotX="25%p" android:pivotY="25%p"
           android:duration="700" />
</set>