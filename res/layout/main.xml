<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

    	<Button android:text="Home"
    	android:id="@+id/buttonhome"
    	android:enabled="false"
    	android:textSize="13px"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
    	</Button>

    	<Button android:text="Start"
    	android:id="@+id/buttonstart"
    	android:textSize="13px"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
   		</Button>
    
    	<Button android:text="Credits"
    	android:id="@+id/buttoncredits"
    	android:textSize="13px"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
    	</Button>

	</LinearLayout>
    
	<ScrollView
	android:layout_width="fill_parent"
	android:layout_height="0px"
	android:layout_weight="1">
		
		<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
			
			<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">			
    
    			<Button android:text="Soft Skills"
    			android:id="@+id/buttonsoft"
    			android:textSize="12px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
    			</Button>
    			
    			<Button android:text="Learning Outcomes"
    			android:id="@+id/buttonlearn"
    			android:textSize="12px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
    			</Button>

			</LinearLayout>

			<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
				
				<TextView
    			android:textColor="#aaaa00"
    			android:textSize="09pt"
    			android:textStyle="bold"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:layout_weight="1"
				android:text="Introduction:"/>
				
				<TextView
    			android:textSize="09pt"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:layout_weight="1"
				android:text="This application can be used by lecturers when writing Learning Outcomes to address Soft Skills. This application includes all the seven soft skill categories, and the different levels that each category has."/>

			</LinearLayout>

		</LinearLayout>

	</ScrollView>

	<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

		<RadioGroup android:id="@+id/radiogroup"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<RadioButton android:id="@+id/radio1"
		android:layout_width="0px"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="Theme 1" />
		
		<RadioButton android:id="@+id/radio2"
		android:layout_width="0px"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="Theme 2" />

		</RadioGroup>
	</LinearLayout>
</LinearLayout>